- content_for :id, :users


%h1 Pessoas cadastradas


= link_to new_admin_user_path, class: 'btn btn-success pull-right' do
  %i.icon-plus.icon-white
  Cadastrar usuário



%table.table.table-striped

  %tr
    %th
    %th
    %th Último login
    %th Cadastro
    %th

  - @users.each do |user|

    %tr
      %td= link_to user.name, admin_user_path(user)
      %td= user.email
      %td
        = content_tag :span, time_ago_in_words(user.current_sign_in_at), title: l(user.current_sign_in_at, format: :medium) if user.current_sign_in_at
      %td
        = content_tag :span, time_ago_in_words(user.created_at), title: l(user.created_at, format: :medium)
      %td
        .action
          = link_to edit_admin_user_path(user), rel: 'tooltip', title: 'editar' do
            %i.icon-pencil>

          = link_to password_admin_user_path(user), rel: 'tooltip', title: 'mudar senha' do
            %i.icon-lock

