@import 'nib'
@import 'helpers'


body
  background url('/assets/structure/footer-bg.png') repeat
  margin 0
  padding 0

#main
  background url('/assets/structure/wood-bg.jpg') center top repeat

  #photographs
    background url('/assets/structure/photographs-bg.png') center top no-repeat
    height 679px

  #header
    background-color rgba(#000,0.5)
    box-shadow 0 0 5px rgba(#000,0.4)
    height 96px

    #logo
      text-align center
      padding 25px

  #content
    #login
      background url('/assets/structure/login-bg.png') repeat
      height 235px
      margin 140px auto 0
      padding 40px
      width 266px
      #error
        color #C22
        display block
        font-family Tahoma, sans-serif
        font-size 11px
        height 0px
        line-height 0px
        margin 0 0 5px
        position relative
        text-align center
        top -10px
      h2
        color #b89e57
        font-family Impact, sans-serif
        font-size 36px
        font-weight bold
        margin 0 0 20px
        text-align center
        text-shadow 0 1px 3px rgba(#FFF, 0.45), 0 -2px 3px rgba(#000, 0.75), 1px 1px 1px #000

      .field
        background-color #f3f2e9
        border-radius 10px
        box-shadow 0 3px 5px rgba(#000, 0.5) inset, 0 2px 3px rgba(#FFF,0.25), 0 -2px 3px rgba(#000,0.75)
        height 25px
        margin 0 0 10px
        padding 5px
        label.icon
          color transparent
          display inline-block
          height 13px
          margin 8px
          position relative
          text-indent -19000px
          top -2px
          &.email
            background url('/assets/structure/login-icons.png') no-repeat 0 -13px
            width 11px
          &.password
            background url('/assets/structure/login-icons.png') no-repeat
            width 12px
        input
          background none
          border none
          box-shadow none
          font-family Georgia, 'Times New Roman', serif
          font-size 16px
          font-style italic
          outline none !important
          width 210px

      .remember
        color #FFF
        font-size 11px
        font-family "Tahoma", sans-serif

      .actions
        margin-top 15px
        text-align center

        .submit
          background-color #66cc00
          background linear-gradient(top, #7dd625, #55aa00)
          border 1px solid rgba(#000,0.8)
          border-radius 6px
          box-shadow 0 -1px 1px rgba(#000, 0.5) inset, 0 2px 2px rgba(#FFF, 0.4) inset, 0 1px 2px rgba(#FFF,0.25), 0 -1px 2px rgba(#000,0.75)
          color #123d04
          cursor pointer
          font-family Impact, sans-serif
          font-size 17px
          text-shadow 0 1px 0 rgba(#FFF, 0.3)
          text-transform uppercase
          padding 7px 30px

          &:hover
            background linear-gradient(top, lighten(#7dd625,10%), lighten(#55aa00,10%))

          &:active
            background linear-gradient(top, #55aa00, #7dd625)




#footer
  min-height 122px
  border 0px solid #000
  border-top-width 1px
  box-shadow 0 1px 0 rgba(#FFF,0.10) inset, 0 3px 7px rgba(#FFF,0.10) inset
