@import 'helpers'

.simplemodal-container
  .close
    color white
    float right
    position relative
    top .5em
    right 1.5em


.modal
  box-shadow 0px 5px 5px rgba(0, 0, 0, 0.5)
  border-radius 6px
  width 560px
  background-color #333
  display none


  h1
    color lighten(success-color, 10%)
    padding .5em 1em
    font-size 1.5em

  .content
    padding 1em
    margin .3em
    background-color white

  .button-group
    text-align right
    padding .5em

  button
    display inline-block