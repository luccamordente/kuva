@import 'theme'



button-gradient-background(color, reverse = false)
  if reverse
    background-image linear-gradient(top, darken(color, 60%) 0%, color 5%, darken(color, 20%) 95%, lighten(color,10%) 100%)
  else
    background-image linear-gradient(top, lighten(color,90%) 0%, color 5%, darken(color, 20%) 95%, darken(color, 80%) 100%)




button, a.button
  background-color = #CCC
  font-color       = #000

  border none
  border-radius 5px
  button-gradient-background(background-color)
  color font-color
  cursor pointer
  font-size 0.9em
  font-weight bold
  padding 0.8em
  text-align center
  text-shadow 0 1px 0px rgba(255,255,255,0.3)
  text-transform uppercase

  &:hover
    button-gradient-background(lighten(background-color,50%))

  &:active
    button-gradient-background(darken(background-color,10%), true)

  &[disabled]
    button-gradient-background(darken(background-color,10%))
    color lighten(font-color, 50%)
    cursor default


  &.success
    background-color = success-color
    button-gradient-background(background-color)
    &:hover
      button-gradient-background(lighten(background-color,40%))
    &:active
      button-gradient-background(darken(background-color,10%), true)
    &[disabled]
      button-gradient-background(darken(background-color,10%))


  &.danger
    background-color = danger-color
    button-gradient-background(background-color)
    &:hover
      button-gradient-background(lighten(background-color,40%))
    &:active
      button-gradient-background(darken(background-color,10%), true)
    &[disabled]
      button-gradient-background(darken(background-color,10%))


  small
    font-size 0.8em
    font-weight normal