@import 'nib'
@import 'helpers'

.simplemodal-container
  .close
    color white
    display none
    float right
    position relative
    top .5em
    right 1.5em


.modal
  background-color #333
  box-shadow 0px 5px 5px rgba(0, 0, 0, 0.5)
  border-radius 5px
  display none
  padding 0.7em 0 0


  h1
    color lighten(success-color, 10%)
    padding 0.5em 1.5em 1em
    font-size 1.4em

  .content
    clearfix()
    background-color white
    border-radius 5px
    margin 0 .7em
    padding 1em

  .button-group
    text-align right
    padding 1em 0.6em

  a.button, button
    display inline-block
    i
      font-size 0.8em
      font-style normal
      font-weight normal