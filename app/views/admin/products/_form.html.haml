= simple_form_for [:admin, @product] do |f|

  = f.error_notification

  .control-group{ class: @product.errors[:dimension1].present? || @product.errors[:dimension2].present? ? 'error' : '' }
    = f.label nil, 'Tamanho:', class: 'control-label'
    .controls.input-prepend
      = f.number_field :dimension1, class: 'input-mini', :placeholder => "X"
      %span.add-on<> &times
      = f.number_field :dimension2, class: 'input-mini', :placeholder => "Y"

  .control-group{ class: @product.errors[:price].present? ? 'error' : '' }
    = f.label nil, 'Preço:', class: 'control-label'
    .controls.input-prepend
      %span.add-on> R$
      = f.text_field :price, :placeholder => "Preço", class: 'input-small'
      = f.full_error :price
  .form-actions
    = f.submit 'Salvar', class: "btn btn-primary"
