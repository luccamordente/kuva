<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "admin/application", media: "all" %>
  <%= stylesheet_link_tag    "admin/print/print", media: "print" %>
  <%= airbrake_javascript_notifier %>
  <%= javascript_include_tag "admin/application" %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= yield :id if content_for? :id %>">

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Photos!", admin_root_path, class: "brand" %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              luccamordente
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "sair", "#" %></li>
            </ul>
          </li>
        </ul>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li class=""><%= link_to "Ordens", admin_orders_path %></li>
            <li class=""><%= link_to "Tamanhos", admin_products_path %></li>
            <li class=""><%= link_to "Pessoas", "#" %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row-fluid">
      <%= render partial: 'layouts/admin/flash' %>
      <div class="span12">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
