@import 'nib'


@media (min-width: 980px)
  body
    padding-top: 60px;


h1
  padding 0 0 30px 0


*.print-only
  display none

table.table


  tr
    .action a
      transition opacity 0.5s
      opacity 0.2
      &:hover
        opacity 1 !important

    &:hover .action a
      opacity 0.7


    td, th
      text-align center
      &.right
        text-align right